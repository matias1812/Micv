---
// @ts-ignore
import { Icon } from "astro-icon";

const features = [
  {
    title: "Vite",
    icon: "simple-icons:vite",
  },
  {
    title: "React",
      icon: "simple-icons:react",
  },
  {
    title: "JavaScript",
      icon: "simple-icons:javascript",
  },
  {
    title: "TypeScript",
      icon: "simple-icons:typescript",
  },
  {
    title: "Html",
      icon: "simple-icons:html5",
  },
  {
    title: "Css",
      icon: "simple-icons:css3",
  },
  {
    title: "Tailwind",
      icon: "simple-icons:tailwindcss",
  },
  {
    title: "Expo",
      icon: "simple-icons:expo",     
    },
  {
    title: "Python",
      icon: "simple-icons:python",     
    },

];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Manejo tecnologias como:
  </h2>
</div>

<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 lg:grid-cols-9 xl:grid-cols-9 mt-16 gap-8">
  {
    features.map((item) => (
      <div class="flex flex-col justify-center text-center items-center gap-2 max-w-40">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-xl">{item.title}</h3>{" "}
        </div>
      </div>
    ))
  }
</div>
