---
import { SEO } from "astro-seo";
import Navbar from "@components/navbar/navbar.astro";
import Footer from "@components/footer.astro";
import "@fontsource-variable/inter/index.css";
import { ViewTransitions } from "astro:transitions";

export interface Props {
  title: string;
}



const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Matias Torres"
  : "Matias Torres - curriculum vitae";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions fallback="swap"/>

    <SEO
      title={makeTitle}
      description="Mi portafolio y blog personal."
      twitter={{
        creator: "@Matias_torres",
        site: "",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
 
          type: "website",
          title: `Matias Torres - curriculum vitae`,
          image: "https://i.ibb.co/4fgKW8D/Captura-de-pantalla-2023-09-12-a-la-s-00-02-50.png",
        },
        image: {
          alt: "",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer/>
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
